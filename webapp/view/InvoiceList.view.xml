<mvc:View
    controllerName="ui5.walkthrough.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Panel accessibleRole="Region">
        <headerToolbar>
            <Toolbar>
                
                <Title text="{i18n>invoiceListTitle}" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFilterInvoices"
                />
            </Toolbar>
        </headerToolbar>
        <Table
            id="invoiceList"
            width="auto"
            items="{
                path: 'invoiceData>/',
                sorter: {
                    path: 'id',
                    group: false
                }
            }"
        >
            <columns>
                <Column
				 width="50em"
				 minScreenWidth="Small"
				 >
                    <Text text="{i18n>columnNome}" />
                </Column>
                <Column
					width="10em"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="{i18n>columnCompletado}" />
                </Column>
                <Column
					width="10em"
                    minScreenWidth="Small"
                    demandPopin="false"
                >
                    <Text text="{i18n>columnDetalhes}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    type="Navigation"
                    press=".onPress"
                >
                    <cells>
                        <Text text="{invoiceData>title}" />
                        <CheckBox selected="{= ${invoiceData>completed} === true}" select=".onToggleCompleted" />
                        <Button text="Detalhes" press=".onShowDetails" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>
