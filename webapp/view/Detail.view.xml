<mvc:View
    controllerName="ui5.walkthrough.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:wt="ui5.walkthrough.control"
>
    <Page
        title="{i18n>detailPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            title="{invoice>/title}"
        >
            <attributes>
                <ObjectAttribute
                    title="{i18n>detailCompletado}"
                    text="{= ${invoice>/completed} ? ${i18n>Completo} : ${i18n>Incompleto} }"
                />
                <ObjectAttribute
                    title="{i18n>detailId}"
                    text="{invoice>/id}"
                />
                <ObjectAttribute
                    title="{i18n>detailUserId}"
                    text="{invoice>/userId}"
                />
            </attributes>
        </ObjectHeader>
    </Page>
</mvc:View>
